---
import "@/assets/output.css"

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <script src="../../node_modules/htmx.org/dist/htmx.js"></script>

    <link rel="icon" type="image/svg+xml" href="/inventory/favicon.svg" />
    <link rel="stylesheet" href="/inventory/reset.css" />

    <title>{title}</title>
  </head>
  <body class="flex flex-col justify-center align-center">
    <slot />
  </body>
</html>
<style is:global></style>
